@model BikeRouteApp.Models.BikeRouteDirectionViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="BikeRoutes" asp-action="Index" method="get">
    <p>
        <select asp-for="BikeRouteDirection" asp-items="Model.Directions">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoutes![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoutes![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoutes![0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoutes![0].Elevation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoutes![0].Direction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoutes![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoutes![0].StravaLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoutes![0].MapUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BikeRoutes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Elevation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StravaLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MapUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
